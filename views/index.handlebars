
{{> burgers/nav}}


    <div class="container">
			<div class="row justify-content-md-center">
      <img src="{{root}}/assets/img/hamburger2.jpg" alt="hamburger" /> <br>
			</div>
			<div class="row justify-content-md-center">
        <h1>Eat Burgers!!!</h1>
			</div>
				</div>
    </div>

  <div class="container">
    <div class="row">
      <div class="col">
        <h1>Ready to Eat Burger</h1>
        <ul class="list-group">
	 		{{#each burgers}}
	 		 {{#unless this.devoured}}
	 		 <li class="list-group-item">
	 		  <div class="input-group">
	 		  	<p class="lead" id="bgr_name">{{this.burger_name}}</p>
	 		  	<span class="input-group-btn">

	 		  		<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
	 		  			<input type="hidden" name="devoured" value="true">
               <button type="submit" class="btn btn-success" id="devour_btn">Devour It!</button-->
	 		  			<!--button class="btn btn-default btn-lg" type="submit">Devour it!</button-->
	 		  		</form>
	 		  	</span>
	 		  </div>
	 		 </li>
	 		 {{/unless}}
	 		{{/each}}
	 	</ul>
      </div>
      <div class="col">
        <h1>Devoured Burgers</h1>
        <ul class="list-group">
					{{#each burgers}}
					 {{#if this.devoured}}
					 <li class="list-group-item">
					 	<p class="lead" id="bgr_name">{{this.burger_name}}</p>
						 <span class="input-group-btn">
						 <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
	 		  			<!--input type="hidden" name="devoured" value="true"-->
               <button type="submit" class="btn btn-success" id="delete_btn">Delete</button>
						 </form>
						 </span>
					 </li>
					 {{/if}}
					  {{/each}}
				</ul>
      </div>
      
    </div>
	</div>

  <div class="container">
  <div class="row">
    <div class="col">
      <p class="lead"><h4>Add Burger then Click Submit</h4></p>
		
		<form class="create-update-form" action="burgers/create" method="POST">
		 <div class="form-group">
		 	<textarea class="form-control input-lg" type="text" name="burger_name" row="3"></textarea>
		 </div>
		 <button class="btn btn-default btn-lg" type="submit">Submit</button>
		</form>
    </div>
    </div>
    </div>

  
  
  



